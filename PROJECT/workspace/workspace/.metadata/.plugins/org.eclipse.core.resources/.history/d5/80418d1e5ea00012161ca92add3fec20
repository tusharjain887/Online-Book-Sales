				    table.addCell(bookname[i]);
				    table.addCell(quantity[i].toString());
				    table.addCell(cost[i]);
				    table.addCell(quantity[i]*cost[i]);
			 }
		      
			    table.addCell("Total");
			    table.addCell("");
			    table.addCell("");
			    table.addCell("");

